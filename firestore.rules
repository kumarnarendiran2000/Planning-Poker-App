rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to the mail collection for Firebase Trigger Email extension
    match /mail/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to email templates (if using templates)
    match /email_templates/{document} {
      allow read, write: if true;
    }
    
    // Allow access to feedback collection for user feedback submissions and analytics
    // Users can create and read feedback, but cannot modify/delete existing feedback
    match /feedbacks/{document} {
      allow create: if true; // Anyone can submit feedback
      allow read: if true; // Allow reading for analytics dashboard
      allow update, delete: if false; // Prevent modification/deletion for data integrity
    }
  }
}